<%- include("includes/header") %>

<link rel="stylesheet" href="/css/add-note.css" />

<%- include("includes/nav") %>

<form
  class="form-container"
  action="/notes/<% if (update) { %>update/<%= note._id %><% } else { %>add<% } %>"
  method="POST"
>
  <h2><% if (update) { %>Update Note<% } else { %>Add a New Note<% } %></h2>
  <div class="form-group">
    <label for="title">Title</label>
    <input
      type="text"
      id="title"
      name="title"
      required
      value="<% if (update) { %><%=note.title %><% } %>"
    />
  </div>
  <div class="form-group">
    <label for="content">Content</label>
    <textarea id="content" name="content" required>
<% if (update) { %><%= note.content %><% } %></textarea
    >
  <button class="submit-btn" type="submit">
    <% if (update) { %>Update<% } else { %>Add Note<% } %>
  </button>
</form>

<%- include("includes/footer") %>
